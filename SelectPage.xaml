<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetroTicketApp.SelectPage"
             Title="Select">
    <Grid RowDefinitions="Auto,Auto,*">
        <Label 
            x:Name="PageTitle"
            Grid.Row="0"
            Margin="0,20"
            HorizontalOptions="Center"
            FontSize="24"
            FontAttributes="Bold" />

        <SearchBar
            Grid.Row="1"
            x:Name="searchBar"
            Placeholder="Search stations..."
            TextChanged="OnStationQueryChanged" />

        <CollectionView
            x:Name="Stations"
            SelectionMode="Single"
            Grid.Row="2"
            SelectionChanged="OnStationSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label
                        Text="{Binding Name}"
                        FontSize="20"
                        Padding="0,10"
                        HorizontalTextAlignment="Center" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>