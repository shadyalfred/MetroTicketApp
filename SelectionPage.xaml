<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MetroTicketApp.SelectionPage"
             xmlns:strings="clr-namespace:MetroTicketApp.Resources.Strings">
    <Grid RowDefinitions="Auto,Auto,*">
        <Label 
            x:Name="PageTitle"
            Grid.Row="0"
            Margin="0,20"
            HorizontalOptions="Center"
            FontSize="24"
            FontAttributes="Bold" />

        <SearchBar
            Grid.Row="1"
            x:Name="searchBar"
            Placeholder="{x:Static strings:AppResources.StationSearchPlaceholder}"
            TextChanged="OnStationQueryChanged" />

        <CollectionView
            x:Name="Stations"
            SelectionMode="Single"
            Grid.Row="2"
            ItemsUpdatingScrollMode="KeepLastItemInView"
            SelectionChanged="OnStationSelected">
        </CollectionView>
    </Grid>
</ContentPage>